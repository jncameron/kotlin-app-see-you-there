<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg3"
    tools:context=".fragments.CreateEventFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightPurple"
            android:padding="15dp">

            <ImageView
                android:id="@+id/newEventImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/newEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/create_event"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newEventImg" />


            <EditText
                android:id="@+id/newEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="@string/new_event_name_hint"
                android:inputType="text"
                android:lineSpacingExtra="8sp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                android:typeface="normal"
                app:layout_constraintTop_toBottomOf="@+id/newEventTitle"
                tools:layout_editor_absoluteX="15dp"
                tools:textColor="#000" />

            <EditText
                android:id="@+id/newEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="@string/newEventLocationHint"
                android:inputType="text"
                android:lineSpacingExtra="8sp"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/newEventName"
                tools:layout_editor_absoluteX="15dp" />

            <EditText
                android:id="@+id/newEventDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="Details"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                android:textColorHint="#000"
                app:layout_constraintTop_toBottomOf="@+id/newEventLocation" />

            <EditText
                android:id="@+id/newEventBring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="Attendees should bring..."
                android:inputType="text"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                android:textColorHint="#000"
                app:layout_constraintTop_toBottomOf="@+id/newEventDetails" />

            <TextView
                android:id="@+id/newEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:paddingBottom="10dp"
                android:text="Date"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/newEventBring" />

            <TextView
                android:id="@+id/newEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:text="Time"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/newEventDate" />

            <EditText
                android:id="@+id/newEventMinAttendees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="Minimum Attendees (optional)"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                android:textColorHint="#000"
                app:layout_constraintTop_toBottomOf="@+id/newEventTime" />

            <EditText
                android:id="@+id/newEventMaxAttendees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="Maximum Attendees (optional)"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="18sp"
                android:textColorHint="#000"
                app:layout_constraintTop_toBottomOf="@+id/newEventMinAttendees" />


            <Button
                android:id="@+id/accountCreateEventBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bt_shape"
                android:stateListAnimator="@drawable/state_list_animator_z"
                android:text="@string/create_event_btn"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newEventMaxAttendees" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>