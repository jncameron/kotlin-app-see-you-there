<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBg"
    tools:context="com.example.johncameron.seeyouthere.activities.UserInfoActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/statusUpdateEt"
                android:layout_width="210dp"
                android:layout_height="44dp"
                android:background="@drawable/selector_bg_edit_2"
                android:ems="10"
                android:hint="Status..."
                android:inputType="textPersonName"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="15sp" />

            <Button
                android:id="@+id/statusUpdateBtn"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="@color/bgColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:stateListAnimator="@drawable/state_list_animator_z"
                android:text="Update"
                android:textColor="@color/cardview_light_background"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/country_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_card">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/countryUpdateEt"
                android:layout_width="210dp"
                android:layout_height="44dp"
                android:background="@drawable/selector_bg_edit_2"
                android:ems="10"
                android:hint="Country"
                android:inputType="textPersonName"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="15sp" />

            <Button
                android:id="@+id/countryUpdateBtn"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="@color/bgColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:stateListAnimator="@drawable/state_list_animator_z"
                android:text="Update"
                android:textColor="@color/cardview_light_background"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/eap_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/country_card">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/eapUpdateEt"
                android:layout_width="210dp"
                android:layout_height="44dp"
                android:background="@drawable/selector_bg_edit_2"
                android:ems="10"
                android:hint="EAP Level"
                android:inputType="textPersonName"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textSize="15sp" />

            <Button
                android:id="@+id/eapUpdateBtn"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="@color/bgColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:stateListAnimator="@drawable/state_list_animator_z"
                android:text="Update"
                android:textColor="@color/cardview_light_background"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
